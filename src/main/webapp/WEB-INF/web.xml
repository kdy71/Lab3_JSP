<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>ServletStart</servlet-name>
    <servlet-class>servlets.ServletStart</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletStart</servlet-name>
    <url-pattern>/ServletStart</url-pattern>
  </servlet-mapping>

  <!-- Переопределим стартовую страничку на ServletStart.
  (по умолчанию она index.jsp )  !-->
  <welcome-file-list>
    <welcome-file>ServletStart</welcome-file>
  </welcome-file-list>



</web-app>
